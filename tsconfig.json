{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "lib",
    "removeComments": false,
    "sourceMap": false,
    "strict": false,
    "target": "es2019"
  },
  "include": ["src/**/*", "stories/**/*"],
  "exclude": ["node_modules", "**/__tests__"]
}
