{
  "compilerOptions": {
    "lib": ["DOM", "ES2022"],
    "types": [],
    "target": "ES2022",
    "outDir": "lib",
    "jsx": "react-jsx",
    "module": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "stories/**/*",
    "tests/**/*",
    "playwright-ct.config.ts",
    "playwright"
  ],
  "exclude": ["node_modules"]
}
