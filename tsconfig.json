{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "lib",
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": false,
    "target": "es2019"
  },
  "include": ["src/**/*", "stories/**/*"],
  "exclude": ["node_modules"]
}
